generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String
  file     File[]
  folder   Folder[]

  @@map("users")
}

model File {
  id          Int      @id @default(autoincrement())
  title       String? 
  path        String   
  size        Int
  createdAt   DateTime @default(now())
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  folder      Folder?   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId    Int?

  @@map("files")
}

model Folder{
  id          Int     @id @default(autoincrement())
  name        String
  file        File[]
  owner       User    @relation(fields: [ownerId], references: [id])
  ownerId     Int

  @@map("folders")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text // MediumText may be needed for MySql
  expiresAt DateTime
}